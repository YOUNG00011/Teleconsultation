<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/ll_root"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/comm_info_hint_text_color" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp">

                    <View
                        android:id="@+id/v_1"
                        android:layout_width="3dp"
                        android:layout_height="18dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/v_1"
                        android:text="@string/consultation_details_patient_info"
                        android:textColor="@color/black" />
                </RelativeLayout>

                <include layout="@layout/comm_item_patient" android:id="@+id/l_patiment"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:paddingBottom="8dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp">

                    <View
                        android:id="@+id/v_2"
                        android:layout_width="3dp"
                        android:layout_height="18dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/v_2"
                        android:text="@string/consultation_details_diagnosis"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_diagnosis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/v_2"
                        android:layout_marginTop="8dp"
                        android:text="未诊断" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="8dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp">

                    <View
                        android:id="@+id/v_3"
                        android:layout_width="3dp"
                        android:layout_height="18dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/v_3"
                        android:text="@string/treatment_details_explain"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_describe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/v_3"
                        android:layout_marginTop="8dp" />
                    <com.jude.easyrecyclerview.EasyRecyclerView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:scrollbarStyle="insideOverlay"
                        app:scrollbars="none"
                        android:id="@+id/recycler_view_photo"
                        android:layout_below="@+id/tv_describe"
                        android:layout_weight="1" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_info_more"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_gravity="center_horizontal"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:text="@string/consultation_details_look_at_more_emr"
                    android:textColor="@color/colorPrimary" />

                <LinearLayout
                    android:id="@+id/ll_apply_doctor1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingLeft="16dp"
                        android:paddingTop="8dp">

                        <View
                            android:id="@+id/v_51"
                            android:layout_width="3dp"
                            android:layout_height="18dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/colorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/v_51"
                            android:text="@string/consultation_details_apply_doctor"
                            android:textColor="@color/black" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        >

                        <ImageView
                            android:id="@+id/iv_doctor_avatar1"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:layout_marginRight="10dp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_doctor_name1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="8dp"
                                android:text="李平"
                                android:textColor="@color/black"
                                android:textSize="16sp" />


                            <TextView
                                android:id="@+id/tv_doc_describe1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tv_doctor_name1"
                                android:maxLines="1"
                                android:layout_marginTop="10dp"
                                android:ellipsize="end"
                                android:text="妇幼保健院fdfdfdfdfdfdfdfdfdfdfdfdfdfd"
                                android:textSize="12sp" />


                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_apply_doctor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingLeft="16dp"
                        android:paddingTop="8dp">

                        <View
                            android:id="@+id/v_5"
                            android:layout_width="3dp"
                            android:layout_height="18dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/colorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/v_5"
                            android:text="@string/transfer_treatment_doc"
                            android:textColor="@color/black" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        >

                        <ImageView
                            android:id="@+id/iv_doctor_avatar"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:layout_marginRight="10dp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_doctor_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="8dp"
                                android:text="李平"
                                android:textColor="@color/black"
                                android:textSize="16sp" />


                            <TextView
                                android:id="@+id/tv_doc_describe"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tv_doctor_name"
                                android:maxLines="1"
                                android:layout_marginTop="10dp"
                                android:ellipsize="end"
                                android:text="妇幼保健院fdfdfdfdfdfdfdfdfdfdfdfdfdfd"
                                android:textSize="12sp" />


                        </RelativeLayout>





                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/rl_cancel_reason"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:paddingLeft="16dp"
                        android:paddingTop="8dp"
                        android:visibility="gone">

                        <View
                            android:id="@+id/v_8"
                            android:layout_width="3dp"
                            android:layout_height="18dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/colorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/v_8"
                            android:text="取消原因"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tv_cancel_reason"
                            android:layout_width="wrap_content"
                            android:layout_height="38dp"
                            android:layout_below="@id/v_8"
                            android:gravity="center_vertical"
                            android:text="取消了"
                            android:textColor="@color/black" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_refuse_reason"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:paddingLeft="16dp"
                        android:paddingTop="8dp"
                        android:visibility="gone">

                        <View
                            android:id="@+id/v_9"
                            android:layout_width="3dp"
                            android:layout_height="18dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/colorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/v_9"
                            android:text="拒绝原因"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tv_refuse_reason"
                            android:layout_width="wrap_content"
                            android:layout_height="38dp"
                            android:layout_below="@id/v_9"
                            android:gravity="center_vertical"
                            android:text="拒绝了"
                            android:textColor="@color/black" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/detail"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:paddingLeft="16dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dp"
                            android:text="@string/register_detail_doctor1" />

                        <TextView
                            android:id="@+id/doc1"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="hahaha" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dp"
                            android:text="@string/register_dept" />

                        <TextView
                            android:id="@+id/dept"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_my_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dp"
                            android:text="@string/treatment_detail_hospital" />

                        <TextView
                            android:id="@+id/hos"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_my_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dp"
                            android:text="@string/treatment_detail_time" />

                        <TextView
                            android:id="@+id/time"

                            android:textColor="@color/font_inntegral"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_my_cost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dp"
                            android:text="@string/register_detail_cost" />

                        <TextView
                            android:id="@+id/cost"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_my_memo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dp"
                            android:text="@string/treatment_detail_memo" />

                        <TextView
                            android:id="@+id/memo"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1" />



                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>



    <LinearLayout
        android:id="@+id/ll_4th_action"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:visibility="gone"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_double_action_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white" />

        <View
            android:id="@+id/mid"
            android:layout_width="0.5dp"
            android:layout_height="24dp"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tv_double_action_2"
            android:layout_width="0dp"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white" />

    </LinearLayout>
</LinearLayout>