<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/ll_root"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/consultation_details_status" />

                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/comm_info_hint_text_color" />
                </LinearLayout>

                <include layout="@layout/comm_item_patient"    android:id="@+id/l_patiment" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:paddingBottom="8dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp">

                    <View
                        android:id="@+id/v_2"
                        android:layout_width="3dp"
                        android:layout_height="18dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/v_2"
                        android:text="@string/discription_disease_counseling_detail"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_diagnosis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/v_2"
                        android:layout_marginTop="8dp"/>

                    <com.jude.easyrecyclerview.EasyRecyclerView
                        android:layout_below="@+id/tv_diagnosis"
                        android:id="@+id/recycler_view_photo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:scrollbars="none" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rl_cancel_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp"
                    android:visibility="gone">

                    <View
                        android:id="@+id/v_8"
                        android:layout_width="3dp"
                        android:layout_height="18dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/v_8"
                        android:text="取消原因"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_cancel_reason"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_below="@id/v_8"
                        android:gravity="center_vertical"
                        android:text="取消了"
                        android:textColor="@color/black" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_refuse_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp"
                    android:visibility="gone">

                    <View
                        android:id="@+id/v_9"
                        android:layout_width="3dp"
                        android:layout_height="18dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/v_9"
                        android:text="拒绝原因"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_refuse_reason"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_below="@id/v_9"
                        android:gravity="center_vertical"
                        android:text="拒绝了"
                        android:textColor="@color/black" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_except_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp"
                    android:visibility="gone">

                    <View
                        android:id="@+id/v_11"
                        android:layout_width="3dp"
                        android:layout_height="18dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/v_11"
                        android:text="预约答复时间"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_except_time"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_below="@id/v_11"
                        android:gravity="center_vertical"
                        android:text="拒绝了"
                        android:textColor="@color/black" />
                </RelativeLayout>
                <LinearLayout
                    android:orientation="vertical"

                    android:id="@+id/lr_memo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:paddingLeft="16dp"
                        android:paddingTop="8dp">
                        <TextView
                            android:id="@+id/tv_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:layout_marginBottom="10dp"
                            android:text="留言区" />

                        <EditText
                            android:id="@+id/et_content"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minLines="2"
                            android:inputType="text"
                            android:textSize="10dp"
                            android:hint="可输入文字留言"
                            android:imeOptions="actionSend"
                            android:background="@drawable/bg_memo_dis"
                            android:layout_below="@id/tv_title"
                            android:gravity="top|left"
                            android:padding="10dp"
                            android:textColor="@color/black" />
                        <TextView
                            android:layout_below="@+id/et_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:textSize="10dp"
                            android:id="@+id/aa"
                            android:text="您可对患者进行文字留言，最多可以留言三次" />


                    </RelativeLayout>
                    <com.jude.easyrecyclerview.EasyRecyclerView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:scrollbarStyle="insideOverlay" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>

    <LinearLayout
        android:id="@+id/ll_single_action"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_single_action"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_4th_action"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
      android:visibility="gone">

        <TextView
            android:id="@+id/tv_double_action_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
          android:text="@string/str_dis_reply"
            android:textColor="@color/white" />

    </LinearLayout>
</LinearLayout>