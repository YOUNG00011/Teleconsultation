<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:layout_gravity="center"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    android:layout_margin="10dp"
    app:cardBackgroundColor="#8b127c"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"


        android:paddingBottom="20dp"
        android:layout_height="120dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:id="@+id/fl_image"
        android:src="@drawable/te_mobile_logout_btn_focus"/>

    <TextView
        android:id="@+id/bank_name"
        android:layout_toRightOf="@+id/fl_image"
        android:layout_alignBottom="@+id/fl_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="4dp"
        android:textColor="#fff"
        android:text="中国农业银行"
        android:layout_marginTop="5dp"
        />



        <TextView
            android:id="@+id/card_name"
            android:layout_alignLeft="@+id/bank_name"
            android:layout_below="@+id/bank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#fff"
            android:text="**** **** **** 3786"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/black"
            android:text="刘浩"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:background="@drawable/white_bg_bankaccount_owner"
            android:layout_marginTop="5dp"
            />
    </RelativeLayout>
    </android.support.v7.widget.CardView>