<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.wxsoft.teleconsultation.ui.widget.PaletteView
        android:id="@+id/palette"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/whitbackground" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <ImageView
            android:id="@+id/iv_paint_width"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:src="@drawable/ic_border_color_black_24dp"
            android:layout_marginRight="10dp" />

        <LinearLayout
            android:id="@+id/ll_paint_stroke_width"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:layout_toRightOf="@+id/iv_paint_width">

            <FrameLayout
                android:id="@+id/fl_low"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center">

                <View
                    android:id="@+id/v_low"
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:background="@drawable/ic_paint_unchecked_bg"
                    android:layout_gravity="center" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_middle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center">

                <View
                    android:id="@+id/v_middle"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/ic_paint_checked_bg"
                    android:layout_gravity="center" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_high"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center">

                <View
                    android:id="@+id/v_high"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/ic_paint_unchecked_bg"
                    android:layout_gravity="center" />
            </FrameLayout>






        </LinearLayout>

        <Button
            android:id="@+id/btn_commit"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/primary_btn_bg"
            android:text="@string/sign_commit"
            android:textColor="@color/white"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp" />

        <Button
            android:id="@+id/btn_clear"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:background="@drawable/primary_tag_bg"
            android:text="@string/sign_clear"
            android:layout_toLeftOf="@id/btn_commit"
            android:layout_centerVertical="true" />
    </RelativeLayout>
</LinearLayout>