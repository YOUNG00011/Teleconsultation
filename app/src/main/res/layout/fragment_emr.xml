<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@drawable/ic_patient_detail_bg">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/riv_avatar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/riv_avatar"
            android:text="李平"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/tv_health"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="自费"
            android:layout_toRightOf="@id/tv_name"
            android:layout_marginTop="2dp"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/white_desc_bg"
            android:gravity="center"
            android:textSize="12sp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp" />

        <TextView
            android:id="@+id/tv_gender"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="女"
            android:layout_below="@id/tv_name"
            android:layout_toRightOf="@id/riv_avatar"
            android:layout_marginTop="6dp"
            android:layout_marginRight="16dp"
            android:textColor="@color/white"
            android:background="@drawable/black_desc_bg"
            android:textSize="12sp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_age"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:text="23岁"
            android:layout_below="@id/tv_name"
            android:layout_toRightOf="@id/tv_gender"
            android:layout_marginTop="6dp"
            android:textColor="@color/white"
            android:background="@drawable/black_desc_bg"
            android:textSize="12sp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:gravity="center" />

        <co.lujun.androidtagview.TagContainerLayout
            android:id="@+id/tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/riv_avatar"
            android:layout_marginTop="10dp"
            app:container_border_radius="0dp"
            app:container_border_width="0dp"
            app:container_border_color="@android:color/transparent"
            app:container_background_color="@android:color/transparent"
            app:horizontal_interval="5dp"
            app:vertical_interval="5dp"
            app:tag_theme="none"
            app:tag_corner_radius="5dp"
            app:tag_background="@drawable/black_desc_bg"
            app:tag_border_color="@color/colorPrimary"
            app:tag_text_color="@color/white"
            app:tag_text_size="12sp" />
    </RelativeLayout>

    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:pstsIndicatorColor="@color/colorPrimary"
        app:pstsTabTextColor="@color/colorPrimary"
        app:pstsTabTextSize="16sp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp" />
</LinearLayout>