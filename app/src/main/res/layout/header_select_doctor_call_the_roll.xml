<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_search_by_condition"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/select_doctor_search_by_condition"
        android:drawableRight="@drawable/ic_arrow_right"
        android:drawableLeft="@drawable/ic_condition"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:background="@color/white" />

    <include layout="@layout/comm_horizontal_line"/>

    <TextView
        android:id="@+id/tv_my_focus"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/select_doctor_my_focus"
        android:drawableRight="@drawable/ic_arrow_right"
        android:drawableLeft="@drawable/ic_focus"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:background="@color/white" />

    <include layout="@layout/comm_horizontal_line"/>

    <TextView
        android:id="@+id/tv_search_by_hospital"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/select_doctor_search_by_hospital"
        android:drawableRight="@drawable/ic_arrow_right"
        android:drawableLeft="@drawable/ic_hospital"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:background="@color/white" />

    <include layout="@layout/comm_item_group_title"/>
</LinearLayout>